<Window x:Name="loginPage" x:Class="La_Bakéry.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:La_Bakéry"
        mc:Ignorable="d"
        Title="Login" Height="694.286" Width="539.89" Background="#FFDF9F9E" BorderBrush="#FFBD00FF" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Border Background="#FFBB5769" CornerRadius="20" Margin="40">
        <Border.Effect>
            <DropShadowEffect Color="#FF844257" BlurRadius="15" ShadowDepth="10"/>
        </Border.Effect>
        <StackPanel x:Name="loginPanel" Margin="40" >
            <StackPanel.Effect>
                <DropShadowEffect Color="#FF844257" BlurRadius="15"/>
            </StackPanel.Effect>
            <Label x:Name="labelLogin" Content="LOGIN" FontFamily="Comic Sans MS" FontSize="48" Foreground="White" HorizontalContentAlignment="Center"/>
        </StackPanel>
    </Border>
</Window>
